<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.modificar_evento">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lay_modif_validador"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="invisible">

                <Button
                    android:id="@+id/btn_verificacionEventoValidador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="verificacionEvento"
                    android:text="Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tituloModificar" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lay_modif_admin"
                android:layout_width="match_parent"
                android:layout_height="1168dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tv_tituloModificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Modificar evento"
                    android:textSize="34sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/sp_listaTipoModifica"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:prompt="@string/title_spinner_tipo"
                    android:spinnerMode="dialog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_verificacionEvento" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginTop="50dp"
                    android:labelFor="@id/sp_listaTipoModifica"
                    android:text="Tipo"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@+id/sp_listaTipoModifica"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_verificacionEvento" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="68dp"
                    android:labelFor="@id/et_cantVictimasModifica"
                    android:text="NÂ° de victimas"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@+id/et_cantVictimasModifica"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <EditText
                    android:id="@+id/et_cantVictimasModifica"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:text="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sp_listaTipoModifica" />

                <CheckBox
                    android:id="@+id/cb_gendarmeriaModifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="72dp"
                    android:text="Gendarmeria"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <CheckBox
                    android:id="@+id/cb_policiaModifica"
                    android:layout_width="74dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="44dp"
                    android:text="Policia"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <CheckBox
                    android:id="@+id/cb_paramedicosModifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    android:text="Paramedicos"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_policiaModifica" />

                <CheckBox
                    android:id="@+id/cb_bomberosModifica"
                    android:layout_width="85dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="44dp"
                    android:text="Bomberos"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/cb_policiaModifica"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <CheckBox
                    android:id="@+id/cb_otrosModifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="108dp"
                    android:text="Otro"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_gendarmeriaModifica" />

                <CheckBox
                    android:id="@+id/cb_tecnicosModifica"
                    android:layout_width="84dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:text="Tecnicos"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/cb_paramedicosModifica"
                    app:layout_constraintTop_toBottomOf="@+id/cb_bomberosModifica" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    android:text="Autoridades "
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="164dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Area de influencia"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_paramedicosModifica" />

                <EditText
                    android:id="@+id/et_areaInfluenciaModifica"
                    android:layout_width="69dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="36dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/cb_otrosModifica" />

                <Spinner
                    android:id="@+id/sp_medidaAreaInfluenciaModifica"
                    android:layout_width="76dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:prompt="@string/title_spinner_areaInfluencia"
                    android:spinnerMode="dialog"
                    app:layout_constraintStart_toEndOf="@+id/et_areaInfluenciaModifica"
                    app:layout_constraintTop_toBottomOf="@+id/cb_otrosModifica" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    android:text="Ubicacion"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <EditText
                    android:id="@+id/et_ubicacionModifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/et_areaInfluenciaModifica" />

                <EditText
                    android:id="@+id/et_fechaInicioModifica"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="datetime"
                    android:singleLine="true"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_fiDatePickerModifica"
                    app:layout_constraintHorizontal_bias="0.655"
                    app:layout_constraintStart_toEndOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/et_ubicacionModifica" />

                <ImageButton
                    android:id="@+id/btn_fiDatePickerModifica"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:onClick="mostrarCalendarioModifica"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:layout_constraintEnd_toStartOf="@+id/btn_fiHourPickerModifica"
                    app:layout_constraintTop_toBottomOf="@+id/et_ubicacionModifica" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="32dp"
                    android:text="Fecha inicio"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <ImageButton
                    android:id="@+id/btn_fiHourPickerModifica"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="mostrarRelojModifica"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_ubicacionModifica" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="32dp"
                    android:text="Fecha fin"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10" />

                <EditText
                    android:id="@+id/et_fechaFinModifica"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="date"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_ffDatePickerModifica"
                    app:layout_constraintHorizontal_bias="0.945"
                    app:layout_constraintStart_toEndOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/et_fechaInicioModifica" />

                <ImageButton
                    android:id="@+id/btn_ffDatePickerModifica"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:onClick="mostrarCalendarioModifica"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:layout_constraintEnd_toStartOf="@+id/btn_ffHourPickerModifica"
                    app:layout_constraintTop_toBottomOf="@+id/btn_fiDatePickerModifica" />

                <ImageButton
                    android:id="@+id/btn_ffHourPickerModifica"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="mostrarRelojModifica"
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_fiHourPickerModifica" />

                <Button
                    android:id="@+id/btn_grabarEventoModifica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:onClick="editarEvento"
                    android:text="Grabar evento"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.936"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3" />

                <Button
                    android:id="@+id/btn_borrarEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="79dp"
                    android:onClick="borrarEvento"
                    android:text="Borrar evento"
                    app:layout_constraintEnd_toStartOf="@+id/btn_grabarEventoModifica"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3" />

                <Button
                    android:id="@+id/btn_verificacionEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="20dp"
                    android:onClick="verificacionEvento"
                    android:text="Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tituloModificar" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="40dp"
                    android:text="Ubicacion en el mapa"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="24dp"
                    android:onClick="iraUbicarEnMapaModificar"
                    android:text="Abrir mapa"
                    app:layout_constraintStart_toEndOf="@+id/textView13"
                    app:layout_constraintTop_toBottomOf="@+id/et_fechaFinModifica" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>